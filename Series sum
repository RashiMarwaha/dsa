#include <bits/stdc++.h>
using namespace std;
int main()
{
    int array_size;
    int sum=0;
    int x;
    cout<<"Enter the size of array: ";
    cin>>array_size;
    int arr[array_size];
    cout<<"Enter consecutive elements in the array: ";
    for(int i=0;i<array_size;i++)
    {
        cin>>arr[i];
    }
    cout<<"Value of x: ";
    cin>>x;
    for(int i=0;i<array_size;i++)
    {
        sum=sum+arr[i]*pow(x,i);
    }
    cout<<"Sum of the given series pattern: "<<sum;
    return 0;
}
